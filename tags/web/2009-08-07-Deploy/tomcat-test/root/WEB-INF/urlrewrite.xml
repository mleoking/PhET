<?xml version="1.0" encoding="utf-8"?>

<!DOCTYPE urlrewrite
        PUBLIC "-//tuckey.org//DTD UrlRewrite 3.0//EN"
        "http://tuckey.org/res/dtds/urlrewrite3.0.dtd">

<urlrewrite>
    <rule>
        <from>.*</from>
        <run class="edu.colorado.phet.tomcattest.filters.LocalizationHandler">
            
        </run>
    </rule>
    <rule>
        <from>^/[a-zA-Z]{2}(_[a-zA-Z]{2})?/(.*)$</from>
        <to>/$2</to>
    </rule>
    <rule>
        <from>^/simulation/([^/]*)$</from>
        <to>/simulationpage.jsp?simulationName=$1</to>
    </rule>
    <rule>
        <from>^/simulations(/.*)?$</from>
        <to>/simulations.jsp?$1</to>
    </rule>
    <rule>
        <from>^/debugsimulations(/.*)?$</from>
        <to>/debugsimulations.jsp?$1</to>
    </rule>
</urlrewrite>