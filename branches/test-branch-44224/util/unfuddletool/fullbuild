if [ ! -d "build-output" ]
then
    mkdir build-output
fi
javac -classpath src:contrib/swingx-0.9.7/dist/swingx-0.9.7.jar -sourcepath src -d build-output -source 1.6 -target 1.6 src/edu/colorado/phet/unfuddletool/*.java src/edu/colorado/phet/unfuddletool/data/*.java src/edu/colorado/phet/unfuddletool/gui/*.java src/edu/colorado/phet/unfuddletool/util/*.java
cd build-output
jar -xf ../contrib/swingx-0.9.7/dist/swingx-0.9.7.jar org
cd ..
jar -cfm deploy/unfuddletool.jar MANIFEST.MF -C build-output .
java -jar ../../build-tools/contrib/proguard/lib/proguard.jar @unfuddletool.pro -ignorewarnings -dontwarn > /dev/null
mv -f deploy/unfuddletool_optimized.jar deploy/unfuddletool.jar
