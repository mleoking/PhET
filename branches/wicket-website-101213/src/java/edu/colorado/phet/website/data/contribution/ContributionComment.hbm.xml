<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd" >
<hibernate-mapping>
    <class name="edu.colorado.phet.website.data.contribution.ContributionComment" table="contribution_comment">
        <cache usage="read-write"/>
        <id name="id" column="id">
            <generator class="increment"/>
        </id>

        <many-to-one name="contribution" class="edu.colorado.phet.website.data.contribution.Contribution"
                     not-null="true"
                     lazy="false"/>
        <property name="text" length="4096"/>
        <property name="dateCreated" type="timestamp"/>
        <property name="dateUpdated" type="timestamp"/>
        <many-to-one name="phetUser" class="edu.colorado.phet.website.data.PhetUser" not-null="true" lazy="false"/>

    </class>
</hibernate-mapping>