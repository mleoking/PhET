<?xml version="1.0" ?>
<mx:TitleWindow xmlns:mx="http://www.adobe.com/2006/mxml" title="{CommonStrings.labelAbout}" >
    <mx:Script>
        <![CDATA[
            import mx.managers.PopUpManager;

            private function closeDialog() : void {
                PopUpManager.removePopUp(this);
            }

            public function linkHandler(event:TextEvent):void {
                navigateToURL(new URLRequest(event.text), '_blank')
            }
        ]]>
    </mx:Script>

    <mx:HBox>
        <mx:Label text="PhET Interactive Simulations"/>
    </mx:HBox>

    <mx:HBox>
        <mx:Label link="linkHandler(event);" htmlText="Visit &lt;a href='http://phet.colorado.edu'&gt;&lt;font color='#0000FF'&gt;http://phet.colorado.edu&lt;font&gt;&lt;/a&gt;" />
    </mx:HBox>

    <mx:HBox>
        <mx:Button label="{CommonStrings.labelSoftwareAgreement + '...'}" />
        <mx:Button label="{CommonStrings.labelCredits + '...'}" />
        <mx:Button label="{CommonStrings.labelOK}" click="closeDialog();"/>
    </mx:HBox>    
</mx:TitleWindow>