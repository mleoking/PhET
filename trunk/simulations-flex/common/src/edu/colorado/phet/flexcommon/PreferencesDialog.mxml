<?xml version="1.0" ?>
<mx:TitleWindow xmlns:mx="http://www.adobe.com/2006/mxml" title="{CommonStrings.labelPreferences}" >
    <mx:Script>
        <![CDATA[
        import mx.core.Application;
import mx.managers.PopUpManager;

        private function closeDialog() : void {
            PopUpManager.removePopUp(this);
        }

        public function linkHandler(event:TextEvent):void {
            navigateToURL(new URLRequest(event.text), '_blank')
        }

        public function setRegularContrast() : void {
            Application.application.transform.colorTransform = new ColorTransform();
            Application.application.flexcommon.highContrast = false;
        }

        public function setHighContrast() : void {
            Application.application.transform.colorTransform = new ColorTransform(-1, -1, -1, 1, 255, 255, 255, 0);
            Application.application.flexcommon.highContrast = true;
        }

        public function changeContrast() : void {
            if( highContrastCheckBox.selected ) {
                setHighContrast();
            } else {
                setRegularContrast();
            }
        }
        ]]>
    </mx:Script>

    <mx:HBox>
        <mx:CheckBox id="highContrastCheckBox" label="High Contrast" selected="{Application.application.flexcommon.highContrast}" click="changeContrast()"/>
    </mx:HBox>

    <mx:HBox>
        <mx:Button label="{CommonStrings.labelOK}" click="closeDialog();"/>
    </mx:HBox>
</mx:TitleWindow>