<?xml version="1.0"?>
<mx:Application xmlns:mx="http://www.adobe.com/2006/mxml" layout="absolute" xmlns:cmp="edu.colorado.phet.chargesandfields.*" width="800" height="500">
    <mx:Script source="ChargesAndFields.as"/>
    <cmp:ChargesAndFieldsApplication id="app"/>
    <mx:Button id="addPlusChargeButton" label="Add +" height="20" x="0" y="0" click="app.addPlusCharge()" />
    <mx:Button id="addMinusChargeButton" label="Add -" height="20" x="0" y="20" click="app.addMinusCharge()" />
    <mx:Button id="add20Button" label="Add 20" height="20" x="0" y="40" click="app.add20()" />
    <mx:Label id="fps" text="{app.display.mosaic.fps}" x="0" y="480" />
    <mx:HSlider tickInterval="1" snapInterval="1" x="400" y="0" width="300" value="{app.display.mosaic.step}" minimum="3" maximum="50" change="app.display.mosaic.changeStepSize(event)"/>
</mx:Application>