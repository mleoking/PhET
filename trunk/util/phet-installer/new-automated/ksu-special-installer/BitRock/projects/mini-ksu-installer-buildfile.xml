<!-- This BitRock project file creates a small installer (meaning that it only
     includes a few files) that is a subset of the KSU installer.  This is
     intended for testing - it allows the installer to be created quickly and
     also to be created from a small rip. -->
<project>
    <shortName>PhET</shortName>
    <fullName>PhET</fullName>
    <version>$VERSION$</version>
    <installerFilename>${product_shortname}-Installer_${platform_name}.${platform_exec_suffix}</installerFilename>
    <readmeFile>../../../Installer-Resources/Install-Path/${platform_name}/readme.txt</readmeFile>
    <licenseFile>../../../Installer-Resources/Install-Path/license.txt</licenseFile>
    <installationLogFile>${installdir}/install_log.txt</installationLogFile>
    <wrapLicenseFileText>1</wrapLicenseFileText>
    <leftImage></leftImage>
    <logoImage>../../../Installer-Resources/Install-Path/phet-logo-48x48.png</logoImage>
    <splashImage></splashImage>
    <defaultLanguage>en</defaultLanguage>
    <allowLanguageSelection>0</allowLanguageSelection>
    <postInstallationScript></postInstallationScript>
    <postInstallationScriptArguments></postInstallationScriptArguments>
    <preUninstallationScript></preUninstallationScript>
    <preUninstallationScriptArguments></preUninstallationScriptArguments>
    <allowedLanguages></allowedLanguages>
    <cdromPlatforms></cdromPlatforms>
    <defaultInstallationMode></defaultInstallationMode>
    <defaultUnixDirectoryPermissions>755</defaultUnixDirectoryPermissions>
    <defaultUnixFilePermissions>644</defaultUnixFilePermissions>
    <description>The PhET Website Mirror</description>
    <outputDirectory>${installbuilder_install_root}/output</outputDirectory>
    <projectSchemaVersion>1.2</projectSchemaVersion>
    <saveRelativePaths>1</saveRelativePaths>
    <slideShowLoop>1</slideShowLoop>
    <slideShowTiming>5</slideShowTiming>
    <startMenuGroupName>${product_fullname}</startMenuGroupName>
    <style>standard</style>
    <summary>The PhET Website Mirror is an offline copy of the PhET website, containing all the simulations on the website.</summary>
    <uninstallerDirectory>${installdir}</uninstallerDirectory>
    <uninstallerName></uninstallerName>
    <validatorProgram></validatorProgram>
    <vendor>PhET</vendor>
    <enableRollback>0</enableRollback>
    <componentList>
        <component>
            <name>default</name>
            <description>Default Component</description>
            <canBeEdited>1</canBeEdited>
            <detailedDescription></detailedDescription>
            <selected>1</selected>
            <show>1</show>
            <componentSelectionValidationActionList/>
            <folderList>
                <folder>
                    <description>Program Files</description>
                    <destination>${installdir}</destination>
                    <name>programfiles</name>
                    <platforms>all</platforms>
                    <distributionFileList>
                        <distributionDirectory>
                            <origin>../../temp/website/phet-server.colorado.edu_8080/ar/about.html</origin>
                        </distributionDirectory>
                        <distributionDirectory>
                            <origin>../../temp/website/phet-server.colorado.edu_8080/ar/about</origin>
                        </distributionDirectory>
                        <distributionDirectory>
                            <origin>../../temp/website/phet-server.colorado.edu_8080/ar/contribute.html</origin>
                        </distributionDirectory>
                        <distributionDirectory>
                            <origin>../../temp/website/phet-server.colorado.edu_8080/ar/get-phet.html</origin>
                        </distributionDirectory>
                        <distributionFile>
                            <origin>../../temp/website/phet-server.colorado.edu_8080/ar/index.html</origin>
                        </distributionFile>
                        <distributionFile>
                            <origin>../../temp/website/phet-server.colorado.edu_8080/ar/research.html</origin>
                        </distributionFile>
                        <distributionFile>
                            <origin>../../temp/website/phet-server.colorado.edu_8080/ar/version.html</origin>
                        </distributionFile>
                    </distributionFileList>

                    <actionList>
                        <substitute>
                            <files>*/*.jnlp</files>
                            <substitutionList>
                                <substitution>
                                    <pattern>@@INSTALLDIR@@</pattern>
                                    <value>${installdir}</value>
                                </substitution>
                            </substitutionList>
                        </substitute>
                    </actionList>
                </folder>
                <folder>
                    <description>Program Files</description>
                    <destination>${installdir}</destination>
                    <name>programfileslinux</name>
                    <platforms>linux</platforms>
                </folder>
            </folderList>
            <initializationActionList/>
            <postInstallationActionList/>
            <postUninstallationActionList/>
            <readyToInstallActionList/>
        </component>
    </componentList>
    <customLanguageFileList/>
    <fileList/>
    <finalPageActionList/>
    <initializationActionList/>
    <installationAbortedActionList/>
    <parameterList>
        <directoryParameter>
            <name>installdir</name>
            <title></title>
            <description>Installer.Parameter.installdir.description</description>
            <explanation>Installer.Parameter.installdir.explanation</explanation>
            <value>${platform_install_prefix}/${product_shortname}</value>
            <default>${platform_install_prefix}/${product_shortname}</default>
            <allowEmptyValue>0</allowEmptyValue>
            <ask>yes</ask>
            <cliOptionName>prefix</cliOptionName>
            <cliOptionText></cliOptionText>
            <mustBeWritable>yes</mustBeWritable>
            <mustExist>0</mustExist>
            <width>40</width>
        </directoryParameter>
    </parameterList>
    <platformOptionsList/>

    <postInstallationActionList>

        <!-- Set a variable that will contain time stamp information.  -->
        <createTimeStamp>
            <variable>installation_time_stamp</variable>
            <format>%s</format>
        </createTimeStamp>

        <logMessage>
            <text>installation_time_stamp value = ${installation_time_stamp}</text>
        </logMessage>
        
        <!-- Append time stamp property to installation information file.  -->
        <addTextToFile>
            <file>${installdir}/sims/phet-installation.properties</file>
            <text>install.date.epoch.seconds=${installation_time_stamp}</text>
        </addTextToFile>

        <!-- Put the installation time stamp into the HTML files that launch the flash sims.  -->
        <substitute>
            <files>${installdir}/sims/*/*.html</files>
            <substitutionList>
                <substitution>
                    <pattern>@@INSTALLATION_TIMESTAMP@@</pattern>
                    <value>${installation_time_stamp}</value>
                </substitution>
            </substitutionList>
        </substitute>

    </postInstallationActionList>

    <postUninstallationActionList/>
    <preBuildActionList/>
    <preInstallationActionList/>
    <preUninstallationActionList/>
    <readyToInstallActionList/>
    <slideShowImageList/>
    <customLanguageFileList>
        <language>
            <code>en</code>
            <encoding>iso8859-1</encoding>
            <file>./phet_installer_en.lng</file>
        </language>
    </customLanguageFileList>
</project>

