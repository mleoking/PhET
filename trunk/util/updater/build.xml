<project name="Updater" default="dist" basedir=".">

    <property name="src" location="src"/>
    <property name="build" location="build"/>
    <property name="dist" location="dist"/>

    <target name="init" depends="clean">
        <tstamp/>
    </target>

    <target name="compile" depends="init">
        <mkdir dir="${build}"/>
        <javac srcdir="${src}" destdir="${build}" source="1.4" target="1.4" debug="true" debuglevel="lines, vars, source"/>
    </target>

    <target name="dist" depends="compile">
        <mkdir dir="${dist}"/>
        <jar jarfile="${dist}/updater.jar" basedir="${build}">
            <manifest>
                <attribute name="Main-Class" value="edu.colorado.phet.updater.Updater"/>
            </manifest>
        </jar>
    </target>

    <target name="clean">
        <delete>
          <fileset dir="${dist}" includes="**/*"/>
        </delete>
        <delete>
          <fileset dir="${build}" includes="**/*"/>
        </delete>
    </target>
</project>
