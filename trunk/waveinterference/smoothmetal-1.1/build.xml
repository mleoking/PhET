<?xml version="1.0" encoding="UTF-8" ?>
<project name="SmoothMetal" default="all" basedir=".">

    <description>
        Ant 1.5 build file for SmoothMetal
    </description>

    <property name="src" location="src"/>
    <property name="build" location="classes"/>
    <property name="dist" location="dist"/>
    <property name="docs" location="docs/api"/>

    <!-- Libraries -->
    <target name="init">
        <!-- Create the build directory structure used by compile -->
        <mkdir dir="${build}"/>
    </target>

    <target name="compile" depends="init">
        <!-- Compile the java code from ${src} into ${build} -->
        <javac srcdir="${src}" destdir="${build}"> <!-- deprecation="on"> -->
        </javac>
    </target>

    <target name="docs" description="generate java docs">
        <mkdir dir="${docs}"/>
        <javadoc packagenames="smooth.*"
                 sourcepath="${src}"
                 defaultexcludes="yes"
                 destdir="${docs}"
                 author="true"
                 version="true"
                 use="true"
                 windowtitle="SmoothMetal API">
            <doctitle><![CDATA[<h1>SmoothMetal API</h1>]]></doctitle>
            <bottom><![CDATA[<i>Licensed under the MIT license.</i>]]></bottom>
            <link href="http://java.sun.com/j2se/1.4.2/docs/api/"/>
        </javadoc>
    </target>

    <target name="dist" depends="compile,docs"
            description="generate the distribution">

        <!-- Create the distribution directory -->
        <delete dir="${dist}"/>
        <mkdir dir="${dist}"/>

        <!-- copy image resources -->
        <copy todir="${build}">
            <fileset dir="${src}">
                <include name="**/*.gif"/>
                <include name="**/*.png"/>
                <include name="**/*.jpg"/>
            </fileset>
        </copy>

        <!-- Put everything in ${build} into the jar file -->
        <jar jarfile="${dist}/smoothmetal.jar" basedir="${build}" index="true">
            <manifest>
                <attribute name="Main-Class" value="smooth.demo.Main"/>
            </manifest>
        </jar>
    </target>

    <target name="all" depends="dist"/>

    <target name="clean"
            description="clean up">
        <!-- Delete the ${build} and ${dist} directory trees -->
        <delete dir="${build}"/>
        <delete dir="${dist}"/>
    </target>

</project>


