<?xml version="1.0"?>

<project name="OwnTaskExample" default="build_project" basedir="../../">
    <!--<taskdef name="phet-build" classname="edu.colorado.phet.build.PhetBuildTask"/>-->
    <property name="phetbuild-classes" location="ant_output/phetbuild/classes"/>
    <property name="proguard.jar" location="build-tools/proguard3.8/lib/proguard.jar"/>

    <target name="build_phetbuild">
        <mkdir dir="${phetbuild-classes}"/>
        <javac srcdir="build-tools/phet-build/src" destdir="${phetbuild-classes}" classpath="${proguard.jar}"/>
    </target>

    <target name="declare" depends="build_phetbuild">
        <taskdef name="phet-build"
                 classname="edu.colorado.phet.build.PhetBuildTask"
                 classpath="${phetbuild-classes};${proguard.jar}"/>

    </target>

    <target name="build_project" depends="declare">
        <echo message="hello, starting mytask"/>
        <phet-build project="balloons"/>
