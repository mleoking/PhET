<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
		  http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
           version="2.5">

    <servlet>
        <description>A first test servlet</description>
        <display-name>Hello World Servlet</display-name>
        <servlet-name>HelloWorld</servlet-name>
        <servlet-class>edu.colorado.phet.tomcattest.HelloWorld</servlet-class>
    </servlet>
    <servlet>
        <description>Exactly what the display name says</description>
        <display-name>Request Header Example</display-name>
        <servlet-name>RequestHeaderExample</servlet-name>
        <servlet-class>edu.colorado.phet.tomcattest.RequestHeaderExample</servlet-class>
    </servlet>
    <servlet>
        <description>Tests mysql login and other things</description>
        <display-name>MySQL Test</display-name>
        <servlet-name>MySQLTestServlet</servlet-name>
        <servlet-class>edu.colorado.phet.tomcattest.MySQLTestServlet</servlet-class>
    </servlet>
    <servlet>
        <description>Lists all of the simulations</description>
        <display-name>Full SImulation List</display-name>
        <servlet-name>FullSimulationList</servlet-name>
        <servlet-class>edu.colorado.phet.tomcattest.FullSimulationList</servlet-class>
    </servlet>
    <servlet>
        <description>Displays a simulation</description>
        <display-name>Simulation</display-name>
        <servlet-name>SimulationPage</servlet-name>
        <servlet-class>edu.colorado.phet.tomcattest.SimulationPage</servlet-class>
    </servlet>
    <filter>
        <filter-name>UrlRewriteFilter</filter-name>
        <filter-class>org.tuckey.web.filters.urlrewrite.UrlRewriteFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>UrlRewriteFilter</filter-name>
        <url-pattern>/*</url-pattern>
        <dispatcher>REQUEST</dispatcher>
        <dispatcher>FORWARD</dispatcher>
    </filter-mapping>
    <servlet-mapping>
        <servlet-name>HelloWorld</servlet-name>
        <url-pattern>/helloworld</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>RequestHeaderExample</servlet-name>
        <url-pattern>/requestheaderexample</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>MySQLTestServlet</servlet-name>
        <url-pattern>/mysqltest</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>FullSimulationList</servlet-name>
        <url-pattern>/simulations</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SimulationPage</servlet-name>
        <url-pattern>/internalsim</url-pattern>
    </servlet-mapping>
</web-app>
