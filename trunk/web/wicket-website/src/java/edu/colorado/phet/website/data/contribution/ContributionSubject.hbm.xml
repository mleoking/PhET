<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd" >
<hibernate-mapping>
    <class name="edu.colorado.phet.website.data.contribution.ContributionSubject" table="contribution_subject">
        <cache usage="read-write"/>
        <id name="id" column="id">
            <generator class="increment"/>
        </id>

        <many-to-one name="contribution" class="edu.colorado.phet.website.data.contribution.Contribution" not-null="true"
                     lazy="false"/>

        <property name="subject">
            <type name="org.hibernate.type.EnumType">
                <param name="enumClass">edu.colorado.phet.website.data.contribution.Level</param>

                <!-- force it to store strings instead of ints -->
                <param name="type">12</param>
            </type>
        </property>

    </class>
</hibernate-mapping>