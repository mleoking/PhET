<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd" >
<hibernate-mapping>
    <class name="edu.colorado.phet.wickettest.data.Simulation" table="simulation">
        <cache usage="nonstrict-read-write"/>
        <id name="id" column="id">
            <generator class="increment"/>
        </id>
        <property name="name"/>
        <property name="type"/>
        <property name="designTeam"/>
        <property name="libraries"/>
        <property name="thanksTo"/>
        <many-to-one name="project" class="edu.colorado.phet.wickettest.data.Project" lazy="false"/>
        <set name="localizedSimulations" inverse="true">
            <key column="simulation"/>
            <one-to-many class="edu.colorado.phet.wickettest.data.LocalizedSimulation"/>
        </set>
        <set name="categories" inverse="true" table="category_mapping">
            <key column="simulation_id"/>
            <many-to-many class="edu.colorado.phet.wickettest.data.Category" column="category_id"/>
        </set>
        <list name="topics" table="topics_mapping">
            <key column="simulation_id"/>
            <list-index column="idx"/>
            <many-to-many class="edu.colorado.phet.wickettest.data.Keyword" column="keyword_id"/>
        </list>
        <list name="keywords" table="keyword_mapping">
            <key column="simulation_id"/>
            <list-index column="idx"/>
            <many-to-many class="edu.colorado.phet.wickettest.data.Keyword" column="keyword_id"/>
        </list>
    </class>
</hibernate-mapping>