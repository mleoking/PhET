<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd" >
<hibernate-mapping package="edu.colorado.phet.wickettest.test">
    <class name="BasicLocalizedSimulation" table="basic_localized_simulation">
        <id name="id" column="id">
            <generator class="increment"/>
        </id>
        <property name="locale"/>
        <property name="title" length="1024"/>
        <property name="description" length="4048"/>
        <many-to-one name="simulation" class="BasicSimulation" column="simulation" not-null="true"/>
    </class>
</hibernate-mapping>